<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
            app:layout_constraintVertical_bias="0.294"/>
    <Button
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dodaj" android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toTopOf="@+id/reset" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="142dp" android:layout_marginStart="142dp" android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="154dp" android:layout_marginRight="154dp"
            app:layout_constraintHorizontal_bias="1.0" android:onClick="dodaj"/>
    <Button
            android:text="reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="142dp"
            android:layout_marginStart="142dp" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/dodaj" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="154dp" android:layout_marginRight="154dp" android:layout_marginBottom="105dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="reset"/>

</android.support.constraint.ConstraintLayout>